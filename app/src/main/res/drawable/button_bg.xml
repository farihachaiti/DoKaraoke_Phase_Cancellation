<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="#877979"/>
            <gradient android:angle="-90" android:startColor="#DCCFCF" android:endColor="#9E8D8D"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="#877979"/>
            <solid android:color="#B8B2B2"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="#988E98"/>
            <gradient android:angle="-90" android:startColor="#A69797" android:endColor="#6C6363"/>
        </shape>
    </item>
</selector>